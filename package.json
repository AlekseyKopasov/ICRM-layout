{
  "name": "icrm",
  "version": "1.0.0",
  "description": "ICRM layout",
  "author": "Aleksey Kopasov",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlekseyKopasov/ICRM-layout.git"
  },
  "license": "ISC",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "lint:css": "stylelint \"source/sass/blocks/**/*.scss\" --config ./.stylelintrc-format",
    "format:css": "prettier --write \"source/sass/blocks/**/*.scss\" && stylelint \"source/sass/blocks/**/*.scss\" --fix --config ./.stylelintrc-format",
    "eslint": "npx eslint .",
    "test": "npm run editorconfig && npm run lint:css && npm run format:css && npx eslint .",
    "build": "cross-env NODE_ENV=production gulp build",
    "start": "gulp start"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "gulp-pug": "^4.0.1",
    "node-normalize-scss": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^9.7.5",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "cross-env": "^5.2.1",
    "del": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-htmlacademy": "^0.5.2",
    "gulp": "^4.0.2",
    "gulp-csso": "^3.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^5.0.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-posthtml": "^3.0.4",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-svgstore": "^7.0.1",
    "gulp-uglify": "^3.0.2",
    "gulp-webp": "^4.0.1",
    "husky": "^1.1.3",
    "imagemin-pngquant": "^7.0.0",
    "lint-staged": "^8.0.4",
    "postcss-smoothscroll-anchor-polyfill": "^2.0.1",
    "posthtml-include": "^1.4.0",
    "prettier": "^1.15.2",
    "stylelint": "^9.8.0",
    "stylelint-at-rule-no-children": "^0.3.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-declaration-block-no-ignored-properties": "^1.1.0",
    "stylelint-media-use-custom-media": "^1.0.0",
    "stylelint-order": "^1.0.0",
    "stylelint-value-no-unknown-custom-properties": "^2.0.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.11",
    "webpack-stream": "^5.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.css": [
        "prettier --write",
        "stylelint --fix --config ./.stylelintrc-format",
        "git add"
      ]
    }
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/sass/**/*.{sass,scss}"
  ]
}
