extends ../layout/empty-layout

block variables
  -
    const lang = "ru";
    const title = "ICRM";
    const bodyClassName = "empty-layout";

block content
  main.login-page.login-page--pass-recovery
    form( action="/" method="POST" )
      h1.title.title-middle Восстановить пароль
      .form-group
        .input-field
          input( id="register-email" type="email" class="validate" )
          i.material-icons.tiny email
          label( for="register-email" ) Email
          small Введите email

        button.btn.btn-green.waves-effect.waves-light( type="submit" name="action" ) Отправить
